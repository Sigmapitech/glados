# Repeat string n times
fn repeat(s: str, n: int) -> str {
    if (n <= 0) {
        return "";
    };
    
    result: str = "";
    i: int = 0;
    while (i < n) {
        result = concat(result, s);
        i = i + 1;
    };
    return result;
}

