# Check if string is empty
fn is_empty(s: str) -> bool {
    return len(s) == 0;
}

# Pad string on left to reach target length
fn pad_left(s: str, length: int, pad_char: str) -> str {
    current_len: int = len(s);
    if (current_len >= length) {
        return s;
    };
    
    padding: str = repeat(pad_char, length - current_len);
    return concat(padding, s);
}

# Pad string on right to reach target length
fn pad_right(s: str, length: int, pad_char: str) -> str {
    current_len: int = len(s);
    if (current_len >= length) {
        return s;
    };
    
    padding: str = repeat(pad_char, length - current_len);
    return concat(s, padding);
}
