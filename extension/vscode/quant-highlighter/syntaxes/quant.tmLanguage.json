{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Quant",
  "scopeName": "source.quant",
  "patterns": [
    {
      "comment": "Comments",
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block"
        }
      ]
    },
    {
      "comment": "Strings",
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single"
        }
      ]
    },
    {
      "comment": "Function Definition (fn name)",
      "match": "\\b(fn)\\s+([a-zA-Z_]\\w*)",
      "captures": {
        "1": { "name": "keyword.control" },
        "2": { "name": "entity.name.function" }
      }
    },
    {
      "comment": "Keywords",
      "match": "\\b(fn|return|if|else|for|while|continue|break|import|from|const)\\b",
      "name": "keyword.control"
    },
    {
      "comment": "Built-in Types",
      "match": "\\b(int|float|bool|str|void)\\b",
      "name": "storage.type"
    },
    {
      "comment": "Booleans",
      "match": "\\b(True|False)\\b",
      "name": "constant.language.boolean"
    },
    {
      "comment": "Function Calls (identifiers followed by '(')",
      "match": "\\b([a-zA-Z_]\\w*)\\s*(?=\\()",
      "name": "entity.name.function"
    },
    {
      "comment": "Variable Declaration (identifier before ':')",
      "match": "\\b([a-zA-Z_]\\w*)\\s*(?=:)",
      "name": "variable.other.readwrite"
    },
    {
      "comment": "Numbers - Hexadecimal",
      "match": "\\b0[xX][0-9a-fA-F]+\\b",
      "name": "constant.numeric.hex"
    },
    {
      "comment": "Numbers - Octal",
      "match": "\\b0[oO][0-7]+\\b",
      "name": "constant.numeric.octal"
    },
    {
      "comment": "Numbers - Binary",
      "match": "\\b0[bB][01]+\\b",
      "name": "constant.numeric.binary"
    },
    {
      "comment": "Numbers - Decimal and Float",
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric"
    },
    {
      "comment": "Operators",
      "match": "(<<|>>|<=|>=|==|!=|&&|\\|\\||\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|[-+*/%<>=!&|^~])",
      "name": "keyword.operator"
    }
  ]
}
