{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Quant",
  "scopeName": "source.quant",
  "patterns": [
    {
      "comment": "Comments",
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block"
        }
      ]
    },
    {
      "comment": "Strings",
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single"
        }
      ]
    },
    {
      "comment": "Function Definition (func/fn name)",
      "match": "\\b(func|fn)\\s+([a-zA-Z_]\\w*)",
      "captures": {
        "1": { "name": "keyword.control" },
        "2": { "name": "entity.name.function" }
      }
    },
    {
      "comment": "Keywords",
      "match": "\\b(func|fn|return|if|for|continue|break|import|from|try|must|while|const)\\b",
      "name": "keyword.control"
    },
    {
      "comment": "Built-in Types",
      "match": "\\b(Int|String|Float|Bool|int|string|float|bool)\\b",
      "name": "storage.type"
    },
    {
      "comment": "Booleans",
      "match": "\\b(True|False|true|false)\\b",
      "name": "constant.language.boolean"
    },
    {
      "comment": "Function Calls (identifiers followed by '(')",
      "match": "\\b([a-zA-Z_]\\w*)\\s*(?=\\()",
      "name": "entity.name.function"
    },
    {
      "comment": "Variable Declaration (identifier before ':')",
      "match": "\\b([a-zA-Z_]\\w*)\\s*(?=:)",
      "name": "variable.other.readwrite"
    },
    {
      "comment": "Numbers",
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric"
    },
    {
      "comment": "Operators",
      "match": "(\\+\\+|--|->|==|!=|<=|>=|[-+*/%^&!|<>=])",
      "name": "keyword.operator"
    }
  ]
}
