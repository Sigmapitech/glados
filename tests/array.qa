from std import print

fn main() -> int {
    print("=== Quant Array Indexing Showcase ===\n\n");

    // 1. Basic array indexing
    print("1. Basic Array Indexing:\n");
    numbers: [int];
    numbers[0] = 10;
    numbers[1] = 20;
    numbers[2] = 30;
    numbers[3] = 40;
    numbers[4] = 50;
    print("   Array: [10, 20, 30, 40, 50]\n");
    print("   numbers[0] = %d\n", numbers[0]);
    print("   numbers[2] = %d\n", numbers[2]);
    print("   numbers[4] = %d\n\n", numbers[4]);

    // 2. Looping through array with index
    print("2. Loop with Index:\n");
    print("   ");
    for (i: int = 0; i < 5; i++) {
        print("numbers[%d]=%d ", i, numbers[i]);
    };
    print("\n\n");

    // 3. 2D array indexing
    print("3. 2D Array Indexing:\n");
    matrix: [[const int]];
    matrix[0][0] = 1;
    matrix[0][1] = 2;
    matrix[0][2] = 3;
    matrix[1][0] = 4;
    matrix[1][1] = 5;
    matrix[1][2] = 6;
    matrix[2][0] = 7;
    matrix[2][1] = 8;
    matrix[2][2] = 9;
    print("   Matrix:\n");
    for (i: int = 0; i < 3; i++) {
        print("   ");
        for (j: int = 0; j < 3; j++) {
            print("matrix[%d][%d]=%d ", i, j, matrix[i][j]);
        };
        print("\n");
    };
    print("\n");

    // 4. Finding max element using indexing
    print("4. Finding Maximum Element:\n");
    max: int = numbers[0];
    max_index: int = 0;
    for (i: int = 1; i < 5; i++) {
        if (numbers[i] > max) {
            max = numbers[i];
            max_index = i;
        };
    };
    print("   Maximum value: %d at index %d\n", max, max_index);

    return 0;
}
